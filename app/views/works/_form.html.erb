<section>
  <%= form_for @work do |f| %>
    <%= f.label :category %>
    <%= f.select :category, Work::CATEGORIES %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.hidden_field :user_creator, value: session[:user_id] %>

    <%= f.submit class: "button" %>
  <% end %>
</section>
